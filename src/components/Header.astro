---
import Navigation from "./Navigation.astro";
import ThemeIcon from "../components/ThemeIcon.astro";
import "@fontsource/dm-serif-display";
---

<header class="header">
  <div>
    <a class="title-card" href="/">LUCAS DUNKER</a>
    <ThemeIcon />
  </div>
  <nav>
    <Navigation />
  </nav>
</header>

<style>
  .header {
    margin-top: 30px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;

    font-weight: bold;
    text-transform: uppercase;
  }

  .title-card {
    font-size: 2rem;
    width: fit-content;
    font-family: "DM Serif Display", sans-serif;
  }
</style>
