---
import { DraggableComponent } from "./DraggableComponent";
import { getImage } from "astro:assets";

// Get Random Image For About Page
import Bierstadt_Mountains from "../assets/aboutPictures/Bierstadt_Mountains.jpg";
import Monet_Spring from "../assets/aboutPictures/Monet_Spring.jpg";
import Monet_Sunset from "../assets/aboutPictures/Monet_Sunset.jpg";
import Nighthawks from "../assets/aboutPictures/Nighthawks.jpg";
import Quixote_Demons from "../assets/aboutPictures/Quixote_Demons.jpg";
import Saturn_Son from "../assets/aboutPictures/Saturn_Son.jpg";
import Skeleton_Cigarette from "../assets/aboutPictures/Skeleton_Cigarette.jpg";
import Sublime from "../assets/aboutPictures/Sublime.jpg";
import Wizard_Tower from "../assets/aboutPictures/Wizard_Tower.jpg";

let images = [
  Bierstadt_Mountains,
  Monet_Spring,
  Monet_Sunset,
  Nighthawks,
  Quixote_Demons,
  Saturn_Son,
  Skeleton_Cigarette,
  Sublime,
  Wizard_Tower,
];

let optimizedImages = [];

for (var i = 0; i < images.length; i++) {
  optimizedImages.push(
    await getImage({
      src: images[i],
      format: "webp",
    })
  );
}

const randomOptimizedImage =
  optimizedImages[Math.floor(Math.random() * images.length)];
---

<DraggableComponent client:load image={randomOptimizedImage.src} />
