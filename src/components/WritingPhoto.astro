---
import { DraggableComponent } from "./DraggableComponent";
import { getImage } from "astro:assets";
import "@fontsource/just-another-hand";

// Get Random Image For Writing Page
import Fuji from "../assets/writingPictures/Fuji.jpg";
import Kyoto from "../assets/writingPictures/Kyoto.jpg";
import Pisgah from "../assets/writingPictures/Pisgah.jpg";
import WATERFALL from "../assets/writingPictures/WATERFALL.jpg";
import Sunset from "../assets/writingPictures/Sunset.jpg";
import Summit from "../assets/writingPictures/Summit.jpg";

let images = [Fuji, Kyoto, Pisgah, WATERFALL, Sunset, Summit];

let optimizedImages = [];

for (var i = 0; i < images.length; i++) {
  optimizedImages.push(
    await getImage({
      src: images[i],
      format: "avif",
    })
  );
}

const randomOptimizedImage =
  optimizedImages[Math.floor(Math.random() * images.length)];
---

<DraggableComponent client:load image={randomOptimizedImage.src} />
