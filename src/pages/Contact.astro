---
import PrimaryLayout from "../layouts/PrimaryLayout.astro";
import { ContactPhotos } from "../components/ContactPhotos";
const pageTitle = "Contact";
---

<script src="https://kit.fontawesome.com/b94f4ae545.js" crossorigin="anonymous"
></script>

<PrimaryLayout pageTitle={pageTitle}>
  <div
    class="page-container animate-fade animate-once animate-duration-[500ms] animate-delay-300 animate-ease-in-out"
  >
    <div class="contact-container">
      <h1 class="content-header">Where To Find Me</h1>
      <div class="content-body">
        <p class="contact-text">
          Let's get in touch! Coffee? Jam session? Walk on the beach?
        </p>
        <ul class="contact-list">
          <li class="contact-element">
            <a href="https://www.linkedin.com/in/lucasdunker/">LinkedIn</a>
            <i class="ml-1 mr-1 fa-solid fa-arrow-right"></i>
            <a href="https://www.linkedin.com/in/lucasdunker/"
              ><i class="fa-brands fa-linkedin fa-xl"></i></a
            >
          </li>
          <li class="contact-element">
            <a href="https://github.com/Lucas-Dunker">GitHub</a>
            <i class="ml-1 mr-1 fa-solid fa-arrow-right"></i>
            <a href="https://github.com/Lucas-Dunker"
              ><i class="fa-brands fa-github fa-lg"></i></a
            >
          </li>
          <li class="contact-element">
            <a href="mailto:dunker.l@northeastern.edu">Email </a>
            <i class="ml-1 mr-1 fa-solid fa-arrow-right"></i>
            <a href="mailto:dunker.l@northeastern.edu"
              ><i class="fa-solid fa-envelope fa-lg"></i></a
            >
          </li>
          <li class="contact-element">
            CV Available on Request! <i class="ml-1 fa-solid fa-file"></i>
          </li>
        </ul>
      </div>
    </div>
    <div class="image-container">
      <ContactPhotos client:visible />
    </div>
  </div>
</PrimaryLayout>

<style>
  .page-container {
    display: flex;
    flex-direction: row;
    margin-left: 25vw;
    margin-right: 25vw;
  }
  .contact-container {
    display: flex;
    flex-direction: column;
    padding: 1rem;
    text-align: left;
    max-width: 50vw;
  }

  .content-header {
    font-weight: bold;
    font-size: x-large;
    margin-bottom: 2rem;
  }

  .contact-text {
    margin-bottom: 2rem;
  }

  .contact-list {
    font-weight: bolder;
    list-style-type: circle;
  }

  .contact-element {
    margin-bottom: 2rem;
  }
  .image-container {
    padding-left: 20%;
  }

  @media screen and (max-width: 650px) {
    .contact-container {
      display: flex;
      flex-direction: column;
      justify-content: center;
      text-align: center;
      margin: auto;
      max-width: 90%;
    }

    .contact-body {
      text-align: center;
    }
  }

  @media screen and (max-width: 1500px) {
    .image-container {
      display: none;
    }
  }
</style>
