---
import PrimaryLayout from "../layouts/PrimaryLayout.astro";
import AboutPhoto from "../components/AboutPhoto.astro";

const pageTitle = "About";
---

<PrimaryLayout pageTitle={pageTitle}>
  <div
    class="about-container animate-fade animate-once animate-duration-[500ms] animate-delay-300 animate-ease-in-out"
  >
    <h1 class="content-header">WHO I AM</h1>
    <div class="content-body">
      <p class="about-text">Hey! ðŸ‘‹ I'm Lucas.</p>
      <p class="about-text">
        I'm a Computer Science student at Northeastern University, I'm from
        Charlotte, North Carolina, and I love making things. I want to learn and
        see as much as I absolutely can; I have a ways to go, but that's the fun
        of it. When I'm not working, you can find me working on my music, riding
        my longboard along the Charles Esplanade, taking a fat nap, or
        organizing another backpacking trip with my friends.
      </p>
      <div class="content-row">
        <div class="content-leftcolumn">
          <h2 class="content-music-header text-center">
            WHAT I'M LISTENING TO
          </h2>
          <a
            class="lastfm-embed animate-fade-up animate-once animate-duration-[500ms] animate-delay-1000 animate-ease-in-out"
            href="https://www.last.fm/user/LucasDunker"
            ><img
              width="475"
              height="500"
              src="https://lastfm-recently-played.vercel.app/api?user=LucasDunker&count=5"
            /></a
          >
        </div>
        <div class="content-rightColumn">
          <h2 class="content-music-header text-center">PAINTING OF THE DAY</h2>
          <div
            class="image-container animate-fade-up animate-once animate-duration-[500ms] animate-delay-1000 animate-ease-in-out max-w-[500px]"
          >
            <AboutPhoto />
          </div>
        </div>
      </div>
    </div>

    <style>
      .about-container {
        display: flex;
        flex-direction: column;
        margin-left: 25vw;
        margin-right: 25vw;
        padding: 1rem;
        text-align: left;
        max-width: 50vw;
      }

      .content-header {
        font-weight: bold;
        font-size: x-large;
        margin-bottom: 2rem;
        font-family: "DM Serif Display", sans-serif;
      }

      .content-music-header {
        font-weight: bold;
        font-size: x-large;
        margin-bottom: 1rem;
        font-family: "DM Serif Display", sans-serif;
      }

      .about-text {
        margin-bottom: 2rem;
      }

      .lastfm-embed {
        display: inline-block;
      }

      .content-row {
        display: flex;
        flex-direction: row;
        gap: 2rem;
        justify-content: space-between;
      }

      @media screen and (max-width: 650px) {
        .about-container {
          display: flex;
          flex-direction: column;
          justify-content: center;
          text-align: center;
          margin: auto;
          max-width: 90%;
        }

        .lastfm-embed {
          display: fixed;
        }

        .content-header {
          text-align: center;
        }

        .content-music-header {
          text-align: center;
        }

        .about-text {
          text-align: center;
        }
      }
    </style>
  </div>
</PrimaryLayout>
